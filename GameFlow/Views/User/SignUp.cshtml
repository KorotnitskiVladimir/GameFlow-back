@model GameFlow.Models.User.UserSignUpViewModel
@{
    ViewData["Title"] = "User's registration page";
}
<div class="text-center">
    <h1 class="display-4">User's registration page</h1>
</div>
<div class="row">
    <div class="col">
        <form id="user-registration-form" enctype="multipart/form-data">
            Login:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <input name="user-login" /><br /><br />
            Full name:&nbsp&nbsp <input name="user-name" /><br /><br />
            Password:&nbsp&nbsp <input name="user-password" type="password" minlength="6">&nbsp&nbsp
            Repeat password:&nbsp&nbsp <input name="repeat-password" type="password" minlength="6"><br /><br />
            Phone:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <input name="user-phone" placeholder="+" /><br /><br />
            Email:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <input name="user-email" type="email" /><br /><br />
            Country:&nbsp&nbsp&nbsp&nbsp <input name="user-country" /><br /><br />
            Birth date:&nbsp <input name="user-birthDate" type="date"><br /><br /><br />
            <button type="submit">Register now</button>
        </form>
    </div>
</div>